# =============================================================================
# Jump AI Agent Environment Variables
# =============================================================================
# Copy this file to .env and fill in your ACTUAL values
# WARNING: Never commit real secrets or API keys to version control

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/jump_dev

# =============================================================================
# Application Security
# =============================================================================
SECRET_KEY_BASE=your-secret-key-base-here-generate-with-mix-phx-gen-secret
ENCRYPTION_KEY=VGhpcyBpcyBhIDMyLWJ5dGUgc2VjcmV0IGtleSBmb3IgZW5jcnlwdGlvbiEQ

# =============================================================================
# Application URLs
# =============================================================================
APP_BASE_URL=http://localhost:4000
OAUTH_REDIRECT_URL_DEV=http://localhost:4000/auth/google/callback
OAUTH_REDIRECT_URL=https://yourapp.com/auth/google/callback

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Google OAuth & API Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Google OAuth redirect URIs (set these in Google Cloud Console)
# Development: http://localhost:4000/auth/google/callback
# Production: https://yourapp.com/auth/google/callback

# =============================================================================
# HubSpot OAuth & API Configuration
# =============================================================================
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret

# HubSpot redirect URIs (set these in HubSpot Developer Portal)
# Development: http://localhost:4000/auth/hubspot/callback
# Production: https://yourapp.com/auth/hubspot/callback

# =============================================================================
# Google Test Account (for Gmail/Calendar access)
# =============================================================================
# Add webshookeng@gmail.com as a test user in your Google Cloud Console
# under OAuth consent screen -> Test users

# =============================================================================
# Background Job Configuration (Oban)
# =============================================================================
OBAN_CRON=*/5 * * * * Oban.Worker.SomeWorker
OBAN_QUEUES=default,ingest,embed,outbound,sync,webhooks

# =============================================================================
# Optional: Pub/Sub Configuration (for Gmail push notifications)
# =============================================================================
# PUBSUB_PROJECT_ID=your-gcp-project-id
# PUBSUB_CREDENTIALS_PATH=path/to/your/service-account-key.json
# PUBSUB_GMAIL_TOPIC=gmail-push-topic

# =============================================================================
# Development vs Production
# =============================================================================
MIX_ENV=dev
PHX_HOST=localhost
PORT=4000

# For production deployment:
# MIX_ENV=prod
# PHX_HOST=yourdomain.com
# PORT=4000
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# =============================================================================
# Optional Error Tracking
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn-here
# HONEYBADGER_API_KEY=your-honeybadger-key-here

# =============================================================================
# Optional Rate Limiting
# =============================================================================
# PHX_RATE_LIMIT=100
# PHX_RATE_LIMIT_INTERVAL=60
